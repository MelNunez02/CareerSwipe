<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.careerswipe.JobOverviewActivity">

    <TextView
        android:id="@+id/jobTitle"
        tools:text="Job Title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/jobCompany"
        tools:text="Job Company"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/jobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/jobDescription"
        tools:text="thisadja ;sdljk as;djlfals d;jads as;kla;lsd fa;jlsd;fjlasd;j lfajsdj;lkasjkldfjk;lasd;jkl fa;jksldf;jklasdjk;la;jksdjkas;djk f;akjsd jk;a;s df;jkaljkl;fqjpwjefioq3iwije9riw4iu5g 9werjio wer8 bjw9ghr8w34i0g iewvijw 890r5 bjiw345nbnuwrh9bu8iopj3 eij"
        android:gravity="center"
        android:layout_below="@id/jobCompany"
        android:layout_above="@id/payParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/payParent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/jobLevel"
            tools:text="Job Level:"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/jobPay"
            tools:text="$999,999.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/decisionBtns"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/denyBtn"
            android:text="Decline"
            android:backgroundTint="#E60000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:visibility="invisible"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <Button
            android:id="@+id/applyBtn"
            android:text="Apply"
            android:backgroundTint="#122AFD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:visibility="invisible"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <Button
            android:id="@+id/saveBtn"
            android:text="Save Job"
            android:backgroundTint="#00AE00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



</RelativeLayout>