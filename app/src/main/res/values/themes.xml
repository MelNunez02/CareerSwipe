<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base App Theme -->
    <style name="Theme.CareerSwipe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary and Secondary Colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Default Background Color -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.CareerSwipe.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Splash Screen Background -->
        <item name="android:windowBackground">@color/purple_500</item>

        <!-- Status Bar Color (API 21+) -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/purple_700</item>
    </style>

</resources>
